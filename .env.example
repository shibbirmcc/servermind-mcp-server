# Splunk Connection Configuration
# Copy this file to .env and update with your actual Splunk credentials

# Required: Splunk server hostname or IP address
SPLUNK_HOST=your-splunk-host.com

# Optional: Splunk management port (default: 8089)
SPLUNK_PORT=8089

# Required: Splunk username
SPLUNK_USERNAME=admin

# Required: Splunk password
SPLUNK_PASSWORD=changeme123

# Optional: Connection scheme (default: https)
SPLUNK_SCHEME=https

# Optional: Verify SSL certificates (default: true, set to false for self-signed certs)
SPLUNK_VERIFY_SSL=false

# Optional: Connection timeout in seconds (default: 30)
SPLUNK_TIMEOUT=30

# MCP Server Configuration
# Optional: MCP server name (default: splunk-mcp-server)
MCP_SERVER_NAME=splunk-mcp-server

# Optional: Server version (default: 1.0.0)
MCP_VERSION=1.0.0

# Optional: Default maximum search results (default: 100)
MCP_MAX_RESULTS_DEFAULT=100

# Optional: Default search timeout in seconds (default: 300)
MCP_SEARCH_TIMEOUT=300

# Optional: Log level (default: INFO, options: DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
